{
    "title": {
        "prefix": "title",
        "body": "#+title: ${1:Title}",
        "description": "Document title"
    },
    "author": {
        "prefix": "author",
        "body": "#+author: ${1:Author}",
        "description": "Document author"
    },
    "date": {
        "prefix": "date",
        "body": "#+date: ${1:$CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE}\n",
        "description": "Date"
    },
    "title-author-date": {
        "prefix": "title-author-date",
        "body": "#+title: ${1:Title}\n#+author: ${2:Author}\n#+date: ${3:$CURRENT_YEAR-$CURRENT_MONTH-$CURRENT_DATE}\n",
        "description": "Date"
    },
    "options": {
        "prefix": "options",
        "body": "#+options: ${1:Options}",
        "description": "Document options"
    },
    "toc": {
        "prefix": "toc",
        "body": "#+toc: ${1:Toc}",
        "description": "Document table of contents"
    },
    "include": {
        "prefix": "include",
        "body": "#+include: ${1:include file}",
        "description": "Include file for export"
    },
    "link": {
        "prefix": "link",
        "body": "[[${1:link_path}]${2:[${3:Descriptor}]}]",
        "description": "External link"
    },
    "source block": {
        "prefix": "<s",
        "body": [
            "#+BEGIN_SRC $0\n#+END_SRC"
        ],
        "description": "source block"
    },
    "example block": {
        "prefix": "<e",
        "body": [
            "#+BEGIN_EXAMPLE $0\n#+END_EXAMPLE"
        ],
        "description": "example block"
    },
    "verse block": {
        "prefix": "<v",
        "body": [
            "#+BEGIN_VERSE $0\n#+END_VERSE"
        ],
        "description": "quote block"
    },
    "verbatim block": {
        "prefix": "<v",
        "body": [
            "#+BEGIN_VERBATIM $0\n#+END_VERBATIM"
        ],
        "description": "verbatim block"
    },
    "quote block": {
        "prefix": "<q",
        "body": [
            "#+BEGIN_QUOTE $0\n#+END_QUOTE"
        ],
        "description": "quote block"
    },
    "center block": {
        "prefix": "<c",
        "body": [
            "#+BEGIN_CENTER $0\n#+END_CENTER"
        ],
        "description": "center block "
    },
    "LaTeX block": {
        "prefix": "<l",
        "body": [
            "#+BEGIN_LaTeX $0\n#+END_LaTeX"
        ],
        "description": "LaTeX block"
    },
    "LaTeX line": {
        "prefix": "<L",
        "body": [
            "#+LaTeX: $0"
        ],
        "description": "LaTeX line"
    },
    "HTML block": {
        "prefix": "<h",
        "body": [
            "#+BEGIN_HTML $0\n#+END_HTML"
        ],
        "description": "HTML block"
    },
    "HTML line": {
        "prefix": "<H",
        "body": [
            "#+HTML:$0"
        ],
        "description": "HTML line"
    },
    "ascii block": {
        "prefix": "<a",
        "body": [
            "#+BEGIN_ASCII $0\n#+END_ASCII"
        ],
        "description": "ASCII block"
    },
    "ascii line": {
        "prefix": "<A",
        "body": [
            "#+ASCII: $0"
        ],
        "description": "ASCII line"
    },
    "include line": {
        "prefix": "<I",
        "body": [
            "#+INCLUDE: ${1:include file}"
        ],
        "description": "include line"
    },
    "index line": {
        "prefix": "<i",
        "body": [
            "#+INDEX: $0"
        ],
        "description": "index line"
    }
}
